<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.WriteAway" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="floatingActionButtonStyle">@style/Base.FloatingButton</item>
        <item name="popupMenuStyle">@style/Base.PopupMenu</item>
        <item name="checkboxStyle">@style/Base.CheckBox</item>
    </style>

    <style name="Theme.WriteAway" parent="Base.Theme.WriteAway" />

    <style name="Base.FloatingButton" parent="Widget.Design.FloatingActionButton">
        <item name="android:elevation">6dp</item>
        <item name="borderWidth">2dp</item>
        <item name="backgroundTint">@color/yellow</item>
        <item name="tint">@color/white</item>
        <item name="strokeColor">@color/black</item>
    </style>

    <style name="Base.PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_menu_background</item>
    </style>

    <style name="Base.CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:buttonTint">@android:color/holo_orange_light</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>